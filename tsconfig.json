{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2018",
    "esModuleInterop": true,
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}